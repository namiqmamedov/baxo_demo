                                <img src="~/assets/img/news/news-20.webp" alt="Image">
                              </div>
                              <div class="news-card-info">
                                <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.ID" class="news-cat">Fashion</a>
                                <h3>
                                  <a asp-controller="blog" asp-action="detail" asp-route-id="@blog.ID">@blog.Title</a>
                                </h3>
                                <ul class="news-metainfo list-style">
                                  <li>
                                    <i class="fi fi-rr-calendar-minus"></i>
                                    <a href="news-by-date.html">@blog.Date</a>
                                  </li>
                                </ul>
                              </div>
                            </div>
                        </div>
                    }
