@model List<Blog>

<div class="general-news ptb-100">
  <div class="container-fluid">
    <div class="content-wrapper">
      <div class="left-content">
        <div class="row align-items-end mb-40">
          <div class="col-md-7">
            <h2 class="section-title">Blogs <img class="section-title-img" src="~/assets/img/section-img.webp" alt="Image">
            </h2>
          </div>
          <div class="col-md-5 text-md-end">
            <a asp-controller="blog" asp-action="detail" class="link-one">View All Blogs <i class="flaticon-right-arrow"></i>
            </a>
          </div>
        </div>
        <div class="row justify-content-center">
                    @foreach (Blog blog in Model)
